{
    "name": "horde/ldap",
    "description": "LDAP client library",
    "type": "library",
    "homepage": "https://www.horde.org/libraries/Horde_Ldap",
    "license": "LGPL-3.0-only",
    "authors": [
        {
            "name": "Ben Klang",
            "email": "ben@alkaloid.net",
            "role": "lead"
        },
        {
            "name": "Jan Schneider",
            "email": "jan@horde.org",
            "role": "lead"
        }
    ],
    "time": "2022-11-14",
    "repositories": [
        {
            "type": "composer",
            "url": "https://horde-satis.maintaina.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8",
        "horde/exception": "^3 || dev-FRAMEWORK_6_0",
        "horde/util": "^3 || dev-FRAMEWORK_6_0",
        "ext-ldap": "*"
    },
    "require-dev": {},
    "suggest": {
        "horde/test": "^3 || dev-FRAMEWORK_6_0"
    },
    "autoload": {
        "psr-0": {
            "Horde_Ldap": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Horde\\Ldap\\Test\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "horde/horde-installer-plugin": true
        }
    }
}